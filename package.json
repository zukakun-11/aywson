{
  "name": "aywson",
  "version": "0.0.1",
  "description": "Modify JSONC while preserving comments and formatting.",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest",
    "build": "tsdown --outDir dist src/index.ts --format esm,cjs --dts --sourcemap",
    "check": "biome check && tsc --noEmit"
  },
  "keywords": [
    "jsonc",
    "comments",
    "formatting",
    "modify"
  ],
  "author": "Sunil Pai <threepointone@gmail.com>",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "tsdown": "^0.17.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
