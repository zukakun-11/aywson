{
  "name": "aywson",
  "version": "0.0.8",
  "description": "Modify JSONC while preserving comments and formatting.",
  "author": "Sunil Pai <threepointone@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "aywson": "./dist/cli.mjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/threepointone/aywson.git"
  },
  "homepage": "https://github.com/threepointone/aywson",
  "bugs": {
    "url": "https://github.com/threepointone/aywson/issues"
  },
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest",
    "build": "tsdown --outDir dist src/index.ts src/cli.ts --format esm,cjs --dts --sourcemap",
    "check": "biome check && tsc --noEmit"
  },
  "keywords": [
    "jsonc",
    "json",
    "configuration",
    "comments",
    "formatting",
    "modify"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.2",
    "pkg-pr-new": "^0.0.62",
    "tsdown": "^0.17.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "jsonc-parser": "^3.3.1"
  }
}
